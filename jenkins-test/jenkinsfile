pipeline {
    agent any
    
    stages {
        stage('Cloning git') {
            steps {
                git 'https://github.com/507S/MeSeeks-server.git'
            }
        }
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'salmans-nodejs', configId: '811bf464-6b2d-43b7-90bb-fb8ae6076e54') {
                    sh 'npm config ls'
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                nodejs(nodeJSInstallationName: 'salmans-nodejs', configId: '811bf464-6b2d-43b7-90bb-fb8ae6076e54') {
                    sh 'npm test'
                }
            }
        }
        // stage('Deploy') {
        //     steps {
        //         // Add deployment steps here, e.g., deploying to a server, container, or cloud platform
        //         // You might use tools like Docker, PM2, or custom deployment scripts
        //     }
