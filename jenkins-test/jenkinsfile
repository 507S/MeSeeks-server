pipeline{
    agent any

    environment {
        NODEJS_VERSION = 'v20.9.0'
    }


        stage('Install Dependencies') {
            steps {
                script {
                    // Ensure Node.js is available and the correct version
                    def nodeHome = tool name: "NodeJS-${NODEJS_VERSION}", type: 'Tool'
                    def npmHome = tool name: "NodeJS-${NODEJS_VERSION}", type: 'Tool'

                    sh "${nodeHome}/bin/npm install"
                }
            }
        }

        // stage('Build') {
        //     steps {
        //         sh 'npm start'  // Adjust this command based on your project's setup
        //     }
        // }

        stage('Test') {
            steps {
                git 'https://github.com:507S/MeSeeks-server.git'
                sh 'npm test'  // Adjust this command based on your project's setup
            }
        }

        // stage('Deploy') {
        //     steps {
        //         // Add deployment steps here, e.g., deploying to a server, container, or cloud platform
        //         // You might use tools like Docker, PM2, or custom deployment scripts
        //     }
        // }
    }
}